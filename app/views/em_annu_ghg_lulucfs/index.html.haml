- unless @results.empty?
  .well{style: 'background-color:white'}
    .row
      = high_chart("some_id", @chart)
.well
  = search_form_for @q do |f|
    .row
      .col-md-6
        = f.label 'luc'
        = f.collection_select :luc_name_eq, @luc_names, :to_s, :to_s, {},{class: 'form-control'}
      .col-md-6
        = f.label 'sub'
        = f.collection_select :submission_eq, @submissions, :to_s, :to_s, {},{class: 'form-control'}
    %br
    .row
      .col-md-6
      .col-md-6
        = f.submit class: 'btn btn-md btn-default pull-right'
        - unless @results.empty?
          = link_to 'export as csv',em_annu_ghg_lulucfs_path(params.merge(format: 'csv')), tabindex: '-1', class: 'btn btn-md btn-default pull-right', style: 'margin-right: 5px'
- if @results.empty?
  .well
    There are no results for this filter combination
- else
  %table.table.table-striped{data: {toggle:"table", search: "true", pagination: "true", toolbar: '#toolbar' }}
    %thead
      %th
        luc_name
      %th
        submission
      %th
        inventory_year
      %th
        substance
      %th
        unit
      %th
        value
    %tbody
      - @results.each do |row|
        %tr
          %td
            = row["luc_name"]
          %td
            = row["submission"]
          %td
            = row["inventory_year"]
          %td
            = row["substance"]
          %td
            = row["unit"]
          %td
            = row["value"]
